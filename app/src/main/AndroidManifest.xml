<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cretueusebiu.taskmanager" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Task Manager"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="Tasks"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateReminder"
            android:label=""
            android:theme="@style/AppTheme.Create" >
        </activity>
        <activity
            android:name=".CreateTask"
            android:label=""
            android:theme="@style/AppTheme.Create" >
        </activity>
        <activity
            android:name=".DisplayTaskActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".RemindersActivity"
            android:label="Reminders"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".EditTaskActivity"
            android:label=""
            android:theme="@style/AppTheme.Create" >
        </activity>
        <activity
            android:name=".EditReminderActivity"
            android:label="@string/title_activity_edit_reminder"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
